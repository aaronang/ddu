#!/usr/bin/env python

import sys
import click

sys.path.append('/Users/aang/Code/ddu/analysis/src')
import metrics

def main():
    metrics.metrics_to_csv()

@click.command()
@click.option('--granularity', default='class', help='Granularity of analysis.')

def main(granularity):
    """Compute metrics for a given directory."""
    metrics.metrics_to_csv(granularity)

if __name__ == '__main__':
    main()
